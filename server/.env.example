# Azure OpenAI (Chat)
AZURE_OPENAI_ENDPOINT=https://eaigila.openai.azure.com
AZURE_OPENAI_KEY=your_openai_api_key_here
AZURE_OPENAI_DEPLOYMENT=your_openai_deployment_name
AZURE_OPENAI_API_VERSION=2024-01-01

# Azure Cognitive Services (general)
AZURE_COGNITIVE_ENDPOINT=https://eaigila.cognitiveservices.azure.com
AZURE_COGNITIVE_KEY=your_cognitive_services_key_here

# Speech endpoints (region-specific)
AZURE_STT_ENDPOINT=https://southeastasia.stt.speech.microsoft.com
AZURE_TTS_ENDPOINT=https://southeastasia.tts.speech.microsoft.com
AZURE_SPEECH_KEY=your_speech_service_key_here   # can be same as AZURE_COGNITIVE_KEY depending on your setup

# Telegram
TELEGRAM_TOKEN=your_telegram_bot_token_here
WEBHOOK_DOMAIN=   # e.g. https://mydomain.com (leave empty if using polling / ngrok)
WEBHOOK_PATH=/webhook

# Server
PORT=3001

# Optional Redis
REDIS_URL=redis://localhost:6379
